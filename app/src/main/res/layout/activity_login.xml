<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rectangle_broder_white"></ImageView>
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_60sdp"
        android:gravity="center"
        android:textSize="@dimen/_20sdp"
        android:text="LogIn"></TextView>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_23sdp"
        android:layout_marginLeft="@dimen/_23sdp"
        android:hint="Enter Your Name"
        android:textColor="@color/biack"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login"></EditText>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="@dimen/_1sdp"
       android:layout_marginRight="@dimen/_23sdp"
       android:layout_marginLeft="@dimen/_23sdp"
       android:background="@color/biack"
       app:layout_constraintTop_toBottomOf="@+id/et_name"></TextView>

    <Spinner
        android:id="@+id/sp_station"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"

        android:layout_marginLeft="@dimen/_23sdp"
        android:layout_marginRight="@dimen/_23sdp"
        android:padding="@dimen/_5sdp"
        android:hint="Select Your station "
        android:gravity="center_vertical"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        android:layout_marginTop="@dimen/_10sdp">

    </Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_23sdp"
        android:layout_marginLeft="@dimen/_23sdp"
        android:background="@color/biack"
        app:layout_constraintTop_toBottomOf="@id/sp_station"
        ></TextView>

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/biack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/sp_station"
        android:text="Submit"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>